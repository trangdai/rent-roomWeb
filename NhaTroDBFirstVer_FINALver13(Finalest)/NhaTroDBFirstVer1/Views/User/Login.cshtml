@model NhaTroDBFirstVer1.Models.LoginModel
@{
    ViewBag.Title = "Login";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

 @*hien thi cac loi thong bao*/true de khong hien thi nhung loi o ben duoi*@


<div id="main-content" class="col-2-3">
    <div class="wrap-col">
        <h2>Login</h2>

@Html.ActionLink("Login with Google", "ExternalLogin", "User", new { provider = "google" }, null)

<p>
    Please enter your user name and password. @Html.ActionLink("Register", "Register") if you don't have an account.
</p>
        <div class="comment">
@using (Html.BeginForm("Login", "User", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    <div>
        <fieldset>
            <legend>Account Information</legend>

            <div class="editor-label">
                Tên đăng nhập:
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName) @*hien thi loi khi sai cu phap username*@
            </div>

            <div class="editor-label">
                Mật khẩu:
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password) @*hien thi loi khi sai cu phap password*@
            </div>

            <div class="editor-label" style="float:left;margin:5px;">
                @Html.CheckBoxFor(m => m.RememberMe)
                Bạn có muốn lưu không
            </div>

            <p>
                <input type="hidden" value="@Request.QueryString["returnUrl"]" name="returnUrl"/> @*chuyen link trang truoc do can phan quyen*@
                <input style="float:left; margin:5px" type="submit" value="Log In" />
            </p>
        </fieldset>
    </div>
}
            </div>
        </div>
    </div>


