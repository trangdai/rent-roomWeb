@model NhaTroDBFirstVer1.Models.ChangePasswordModel
@{
    ViewBag.Title = "DoiMatKhau";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.Partial("UserControlPartial")
<div class="center_content_control">
    <div class="center_title_bar">Quản lí tài khoản</div>
    <div class="prod_box_big">
        <div class="top_prod_box_big"></div>
        <div class="center_prod_box_big">
            <div class="contact_form">
                @using (Html.BeginForm("DoiMatKhau", "User", FormMethod.Post))
                {
                    @Html.ValidationSummary(true)
                    <div class="form_row">
                        <label class="contact"><strong>Mật khẩu cũ:</strong></label>
                        <div class="editor-field">
                            @Html.PasswordFor(m => m.OldPassword)
                        </div>
                        <div class="editor-field">
                            @Html.ValidationMessageFor(m => m.OldPassword)
                        </div>
                    </div>

                    <div class="form_row">
                        <label class="contact"><strong>Mật khẩu mới:</strong></label>
                        <div class="editor-field">
                            @Html.PasswordFor(m => m.NewPassword)
                        </div>
                        <div class="editor-field">
                            @Html.ValidationMessageFor(m => m.NewPassword)
                        </div>
                    </div>


                    <div class="form_row">
                        <label class="contact"><strong>Xác nhận mật khẩu:</strong></label>
                        <div class="editor-field">
                            @Html.PasswordFor(m => m.ConfirmPassword)
                        </div>
                        <div class="editor-field">
                            @Html.ValidationMessageFor(m => m.ConfirmPassword)
                        </div>
                    </div>
                    
                    <p>
                        <input type="submit" value="Cập nhật mật khẩu" />
                    </p>

                }
            </div>


        </div>
        <div class="bottom_prod_box_big"></div>
    </div>
</div>
<!-- end of center content -->

