@model IEnumerable<NhaTroDBFirstVer1.Models.Room>

@{
    ViewBag.Title = "DanhSachTinDang";
}

@Html.Partial("UserControlPartial")
<div class="center_content_control">
    <div class="center_title_bar">DANH SÁCH TIN ĐÃ LƯU </div>
    <div class="prod_box_big">
        <div class="top_prod_box_big"></div>
        <div class="center_prod_box_big">
            <div class="contact_form">

                <table>

                    <tr>
                        <th>Tên phòng
                        </th>
                        <th>Địa chỉ
                        </th>
                        <th>Giá
                        </th>
                        <th>Mô tả
                        </th>
                        <th>Diện tích
                        </th>
                        <th></th>
                    </tr>


                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.RoomName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Address)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Price)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Area)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.RoomName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Area)
                            </td>
                            <td>
                                @Html.ActionLink("Delete", "DeleteFromQLDD", new { id = item.RoomID })
                            </td>
                        </tr>
                    }

                </table>
            </div>


        </div>
        <div class="bottom_prod_box_big"></div>
    </div>
</div>

