<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Web nhà trọ</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Scripts/jquery.min.js")
    @Scripts.Render("~/Scripts/responsiveslides.js")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/jquery-1.5.min.js")
    @Scripts.Render("~/Scripts/jquery.fancybox-1.3.4.pack.js")
    @Scripts.Render("~/Scripts/jquery.imgpreload.min.js")		
    @Scripts.Render("~/Scripts/gallery.js")

    <link href='/images/favicon.ico' rel='icon' type='image/x-icon' />
    <link rel="stylesheet" type="text/css" href="/Content/jquery.fancybox-1.3.4.css" media="screen" />
	<link rel="stylesheet" type="text/css" href="/Content/gallery.css" />
    <link rel="stylesheet" href="/Content/zerogrid.css">
    <link rel="stylesheet" href="/Content/style.css">
    <link rel="stylesheet" href="/Content/responsive.css">
    <link rel="stylesheet" href="/Content/responsiveslides.css" />
    <link href="/Content/mystyle.css" rel="stylesheet" />
    

    <link rel="stylesheet" href="/Content/base.css">
    <link rel="stylesheet" href="/Content/skeleton.css">
    <link rel="stylesheet" href="/Content/screen.css">
    <link rel="stylesheet" href="/Content/prettyPhoto.css" type="text/css" media="screen" />
    <link rel="stylesheet" href="/Content/mystyle1.css">
    <link rel="stylesheet" href="/Content/table.css">
    <link rel="stylesheet" href="/Content/cart.css">
    <link rel="stylesheet" href="/Content/QLNDStyle.css">
    <link rel="stylesheet" href="/Content/QLHSXuat.css">
    <link rel="stylesheet" href="/Content/QLSPham.css">

</head>
<body>
    <!--------------Header--------------->
    <header>
        <div class="subnav">
            <div class="wrap-subnav zerogrid">
                <div class="share">
                    <ul>
                        <li>@ViewRes.Resource.Language</li>
                        <li>@Html.Partial("CultureChooserUserControl")</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="wrap-header zerogrid">
            <div id="logo"><a href="/">
                <img src="/images/logo.png" /></a>
            </div>
            <div id="search">
                @Html.Partial("_LoginPartial")
            </div>

        </div>
    </header>

    <nav>
        <div class="wrap-nav zerogrid">
            <div class="menu">
                <ul>
                    <li>@Html.ActionLink(ViewRes.Resource.Home, "Index", "Home")</li>
                    <li>@Html.ActionLink(ViewRes.Resource.Search, "SearchIndex", "Room")</li>
                    <li>@Html.ActionLink(ViewRes.Resource.About, "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </nav>
    <!--------------Content--------------->
    <section id="content">
        <div class="wrap-content zerogrid">
            <div class="row">
                @RenderSection("featured", required: false)
                <section class="content-wrapper .main-center-content clear-fix">
                    @RenderBody()
                </section>
            </div>
        </div>
    </section>
    <!--------------Footer--------------->
    <footer>
        <div class="copyright">
            <p>Copyright © 2013 - <a href="http://www.timphongtronhanh.info" target="_blank">Find Rest House</a> by IFIVE GROUP</p>
        </div>
    </footer>
</body>
</html>




